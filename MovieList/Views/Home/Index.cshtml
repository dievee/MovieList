@using Microsoft.AspNet.Identity;
@using MovieList.Models;
<!DOCTYPE html>
<html ng-app>
<head>

    <link href="~/Content/css/listofmovies.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/UserProfile.css" rel="stylesheet" type="text/css" />
    <style>
        .col-centered{
            float: none;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.20/angular.min.js"></script>
    @*<input type="text" ng-model="helloAngular" />
    <h1>{{helloAngular}}</h1>*@
    <h3>@User.Identity.GetUserId()</h3>
    @if(ViewBag.User == null)
    { 
        <div class="row">
            @foreach (var b in ViewBag.Movies )
            {
                <div class="notation">
                    <div class="title">
                        <h4><a href="@b.IMDBLink" style="color: black;">@b.Title (@b.EventDate)</a> </h4>
                    </div>
                    <div class="poster">
                        <a href="@b.IMDBLink"><img src="@b.Poster" /></a>
                    </div>

                    <div class="author">
                        <a>imdb:@b.IMDBRating</a>
                        <br />
                        <a> @b.UserName </a>
                        <br />
                        <a>@b.NotedDate</a>
                        @*<a> @b.Time</a>*@
                        <br />
                        <br />
                        @for (int i = 0; i < Int32.Parse(b.Mark); i++)
                        {
                            <div style="display: inline-block;">
                                <img src="~/Content/Images/star_gold_small.png" />
                            </div>
                        }
                        @for (int j = 0; j < 5 - Int32.Parse(b.Mark); j++)
                        {
                            <div style="display: inline-block;">
                                <img src="~/Content/Images/star_gray_small.png" />
                            </div>
                        }
                    </div>
                    <div class="comment">
                        @b.Comment
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-11 col-centered profile">
                 <div class="photo">
                     <img src="http://img1.reactor.cc/pics/post/Dota-zoidberg-Leviathan-the-Tidehunter-609169.jpeg" />
                 </div>
                 <div class="info">
                     <p>@ViewBag.User.Id</p>
                     <p>@ViewBag.User.Email</p>
                     <p>@ViewBag.User.UserName</p>
                 </div>
            </div>
        </div>
        <h3>My movies</h3>
        <div class="row">
            @foreach (var b in ViewBag.Movies)
            {
                <div class="notation">
                    <div class="title">
                        <h4><a href="@b.IMDBLink" style="color: black;">@b.Title (@b.EventDate)</a> </h4>
                    </div>
                    <div class="poster">
                        <a href="@b.IMDBLink"><img src="@b.Poster" /></a>
                    </div>
                    
                    <div class="author">
                            <a>imdb:@b.IMDBRating</a>
                        <br />
                        <a>@b.NotedDate</a>
                        @*<a> @b.Time</a>*@
                        <br />
                        <br />
                        @for (int i = 0; i < Int32.Parse(b.Mark); i++)
                        {
                            <div style="display: inline-block;">
                                <img src="~/Content/Images/star_gold_small.png" />
                            </div>
                        }
                        @for (int j = 0; j < 5 - Int32.Parse(b.Mark); j++)
                        {
                            <div style="display: inline-block;">
                                <img src="~/Content/Images/star_gray_small.png" />
                            </div>
                        }
                    </div>
                    <div class="comment">
                        @b.Comment
                    </div>
                </div>
            }
        </div>

    }

</body>
</html>