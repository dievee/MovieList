@model MovieList.Models.SearchMovie

<br />
<div>
    @if (ViewBag.movie == null)
    {
        using (Html.BeginForm("Search", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div>
                <input type="text" name="movieTitle"  placeholder="Title" autocomplete="off" />
                <input type="text" name="movieYear" placeholder="Year" autocomplete="off" />
            </div>
            <div>
                <input type="submit" />
            </div>
        }
    }
    else
    {

        <div class="movie">
            <div class="title">
                <h3><a href="@ViewBag.movie.IMDBLink">@ViewBag.movie.Title</a></h3>
            </div>
            <div class="body">
                <div class="poster">
                    <img src="@ViewBag.movie.Poster" />
                </div>
                <div class="movieinfo">
                    <div class="rating">
                        @ViewBag.movie.EventDate  @ViewBag.movie.IMDBRating
                    </div>
                    <div class="description">
                        @ViewBag.movie.Description
                    </div>
                </div>
            </div>
            


        </div>
        
       
    }
</div>
